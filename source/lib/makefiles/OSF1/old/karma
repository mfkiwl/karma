LIB = karma

library = ../lib$(LIB).a
shared_lib = lib$(LIB).so
lintlib = ../llib-l$(LIB).ln
shared_target = $(KARMALIBPATH)/$(shared_lib)

.PRECIOUS: $(library)

CFLAGS = 

include $(KARMAROOT)/source/lib/makefiles/GNUmakefile.h1

.PHONY: all
all:	$(shared_target) clean


$(library):	$(members)
	ranlib $(library)


$(shared_target):	$(objects) $(csource) ../so_locations
	ld -shared -VS $(KARMA_VERSION) -check_registry ../so_locations \
	-update_registry ../so_locations -o $(shared_lib) -all $(objects) \
	-none -lc -lm
	mv $(shared_lib) $(KARMALIBPATH)


lint:	$(lintlib)

$(lintlib):	$(csource)
	(cd $(libdir) ; make_lint)
	(cd .. ; lint -DOS_$(OS) -DMACHINE_$(MACHINE) -I$(KARMAINCLUDEPATH) -C$(LIB) $(lintdir)/*.c)


clean:
	\rm -f *~ *.bak


depend:
	(cd $(sourcedir); makedepend -DMAKEDEPEND -DOS_$(OS) -DMACHINE_$(MACHINE) -I$(KARMAINCLUDEPATH) -f$(builddir)/dependfile $(csource) )

include dependfile
